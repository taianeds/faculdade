/******************************************************************************

verificar se o numero é multiplo de 2 ou 3 

*******************************************************************************/

   #include <stdio.h>

int main()
{
    int numero; //variavel para calculo de iteracoes
    int resto; // armazenar o valor do neperiano
    
    printf("digite um numero: ");
    scanf ("%d", &numero);
    
    if((numero%2) == 0)
    {
        printf("\n O numero %d eh divisivel por dois ", numero);
    }
    else
    {
        printf("\n O numero %d não é divisivel por dois", numero);
    }
    if((numero%3) == 0)
    {
        printf("\n O numero %d eh divisivel por tres ", numero);
    }
    else
    {
        printf("\n O numero %d não é divisivel por tres", numero);
    }
    
    return 0;

}
